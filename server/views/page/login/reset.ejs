<div class="card-body" ng-controller="resetPasswordCtrl">
    <h4 class="card-title">Reset Password</h4>
    <form method="POST" class="my-login-validation" novalidate="">
        <div class="form-group">
            <input id="new-password" type="password" class="form-control" name="password" placeholder="Digite su nueva contraseña" required autofocus data-eye>
            <div class="invalid-feedback d-block" ng-if="!Pwd">
                La Contraseña es requerida
            </div>
            <div class="form-text d-block Password-Req" ng-if="!PwdComplexity">
                Asegurese que la contraseña contenga:
                <ul>
                    <li>Letras Mayúsculas       [A-Z] </li>
                    <li>Letras Minúsculas       [a-z] </li>
                    <li>Carácteres Numericos    [0-9]</li>
                </ul>
            </div>
        </div>

        <div class="form-group m-0">
            <button type="button" class="btn btn-primary btn-block">
                Reset Password
            </button>
        </div>
    </form>
</div>