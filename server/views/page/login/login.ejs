<div class="card-body" ng-controller="loginCtrl" >
    <form class="my-login-validation" novalidate>
        <div class="form-group">
            <label for="email">Correo</label>
            <input id="email" type="email" class="formcontrol" name="email" ng-model="User">
            <div class="invalid-feedback d-block" ng-if="!validUsr">
                Correo Electronico Invalido
            </div>
        </div>

        <div class="form-group">
            <label for="password">Contraseña
                <a href="forgot.html" class="float-right">
                    Olvido su Contraseña?
                </a>
            </label>
            <input id="password" type="password" class="formcontrol" name="password" ng-model="Pwd">
            <div class="invalid-feedback d-block" ng-if="!validPwd">
                La Contraseña es requerida
            </div>
        </div>
        <div class="form-group m-0">
            <button type="button" class="btn btn-primary btn-block" ng-click="tryLogin()">
                Login
            </button>
        </div>
    </form>
</div>